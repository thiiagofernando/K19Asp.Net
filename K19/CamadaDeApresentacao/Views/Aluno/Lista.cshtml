@model ICollection<CamadaDeApresentacao.Models.Aluno>
@{
    ViewBag.Title = "Lista";
    
}

@section Toolbar{
    <input type="search" placeholder="Digite o Nome do Aluno"/>
    <input type="button" value="Buscar" class="btn btn-info"/>
    }

<h2>Tabela Aluno</h2>

<table class="table table-striped">
    <thead">
        <th>Aluno ID</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>

    @foreach (var a in @Model)
    {
        <tr>
            <td>@a.AlunoID</td>
            <td>@a.Nome</td>
            <td>@a.Email</td>
        </tr>
    }
</table>

@Html.ActionLink("Detalhes", "Detalhes", "Aluno")<br />


